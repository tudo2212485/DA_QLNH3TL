@model QLNHWebApp.Models.TableBooking
@{
    ViewData["Title"] = "Thanh toán đặt bàn";
    decimal depositFee = 100000; // Phí cọc giữ bàn bắt buộc
    decimal totalAmount = 0;
    if (Model.OrderItems != null)
    {
        totalAmount = Model.OrderItems.Sum(oi => oi.Price * oi.Quantity);
    }
    decimal payNow = depositFee; // Thanh toán ngay = phí cọc
    decimal payLater = totalAmount; // Thanh toán tại quầy = tổng món
}

<style>
    .payment-container {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 60px 0;
    }

    .payment-main-card {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    }

    .payment-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 30px;
        color: white;
        text-align: center;
    }

    .payment-header h2 {
        margin: 0;
        font-size: 28px;
        font-weight: 700;
    }

    .payment-header .subtitle {
        opacity: 0.9;
        margin-top: 8px;
    }

    .info-section {
        background: #f8f9fa;
        padding: 25px;
        border-radius: 12px;
        margin-bottom: 25px;
    }

    .info-section h5 {
        color: #667eea;
        font-weight: 700;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        font-size: 18px;
    }

    .info-section h5 i {
        font-size: 24px;
        margin-right: 10px;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 15px;
    }

    .info-item {
        display: flex;
        align-items: center;
        padding: 12px;
        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .info-item i {
        font-size: 20px;
        margin-right: 12px;
        color: #667eea;
        width: 30px;
        text-align: center;
    }

    .info-item .label {
        font-size: 13px;
        color: #6c757d;
        margin-bottom: 2px;
    }

    .info-item .value {
        font-weight: 600;
        color: #2d3748;
    }

    .badge-custom {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 6px 15px;
        border-radius: 20px;
        font-size: 16px;
        font-weight: 600;
    }

    .menu-table {
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.08);
    }

    .menu-table thead {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .menu-table thead th {
        padding: 15px;
        font-weight: 600;
        border: none;
    }

    .menu-table tbody tr {
        transition: all 0.2s;
    }

    .menu-table tbody tr:hover {
        background: #f8f9fa;
        transform: scale(1.01);
    }

    .menu-table tbody td {
        padding: 15px;
        vertical-align: middle;
    }

    .menu-table tfoot {
        background: #f8f9fa;
        font-weight: 700;
        font-size: 18px;
    }

    .menu-table tfoot th {
        padding: 20px 15px;
        color: #667eea;
    }

    .payment-methods {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .payment-option-card {
        position: relative;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .payment-option-card input[type="radio"] {
        position: absolute;
        opacity: 0;
    }

    .payment-card {
        background: white;
        border: 3px solid #e2e8f0;
        border-radius: 15px;
        padding: 25px;
        text-align: center;
        transition: all 0.3s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .payment-card i {
        font-size: 48px;
        margin-bottom: 15px;
        transition: all 0.3s ease;
    }

    .payment-card h6 {
        font-weight: 700;
        margin-bottom: 8px;
        font-size: 16px;
    }

    .payment-card small {
        color: #6c757d;
        font-size: 13px;
    }

    .payment-option-card:hover .payment-card {
        transform: translateY(-8px);
        box-shadow: 0 12px 30px rgba(102, 126, 234, 0.3);
        border-color: #667eea;
    }

    .payment-option-card input[type="radio"]:checked+.payment-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-color: #667eea;
        color: white;
        transform: translateY(-8px) scale(1.05);
        box-shadow: 0 15px 40px rgba(102, 126, 234, 0.5);
    }

    .payment-option-card input[type="radio"]:checked+.payment-card i,
    .payment-option-card input[type="radio"]:checked+.payment-card h6,
    .payment-option-card input[type="radio"]:checked+.payment-card small {
        color: white !important;
    }

    .payment-option-card input[type="radio"]:checked+.payment-card::after {
        content: "✓";
        position: absolute;
        top: -10px;
        right: -10px;
        background: #10b981;
        color: white;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        font-weight: bold;
        box-shadow: 0 4px 12px rgba(16, 185, 129, 0.4);
    }

    .alert-empty {
        background: linear-gradient(135deg, #e0f2fe 0%, #bfdbfe 100%);
        border: none;
        border-left: 5px solid #3b82f6;
        border-radius: 12px;
        padding: 20px;
        color: #1e40af;
    }

    .btn-primary-custom {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        padding: 15px 40px;
        font-size: 18px;
        font-weight: 700;
        border-radius: 12px;
        transition: all 0.3s ease;
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
    }

    .btn-primary-custom:hover {
        transform: translateY(-3px);
        box-shadow: 0 12px 30px rgba(102, 126, 234, 0.6);
    }

    .btn-outline-custom {
        border: 2px solid #667eea;
        color: #667eea;
        padding: 15px 40px;
        font-size: 18px;
        font-weight: 700;
        border-radius: 12px;
        transition: all 0.3s ease;
        background: white;
    }

    .btn-outline-custom:hover {
        background: #667eea;
        color: white;
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
    }

    .action-buttons {
        display: flex;
        justify-content: space-between;
        gap: 20px;
        margin-top: 30px;
        flex-wrap: wrap;
    }

    @@media (max-width: 768px) {
        .action-buttons {
            flex-direction: column;
        }

        .action-buttons a,
        .action-buttons button {
            width: 100%;
        }

        .payment-methods {
            grid-template-columns: 1fr;
        }

        .info-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="payment-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="payment-main-card">
                    <!-- Header -->
                    <div class="payment-header">
                        <h2><i class="fas fa-credit-card me-2"></i>Thanh toán đặt bàn</h2>
                        <p class="subtitle mb-0">Vui lòng kiểm tra thông tin và chọn phương thức thanh toán</p>
                    </div>

                    <div class="p-4">
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <!-- Thông tin đặt bàn -->
                        <div class="info-section">
                            <h5><i class="fas fa-calendar-check"></i>Thông tin đặt bàn</h5>
                            <div class="info-grid">
                                <div class="info-item">
                                    <i class="fas fa-hashtag"></i>
                                    <div>
                                        <div class="label">Mã đặt bàn</div>
                                        <div class="value"><span class="badge-custom">#@Model.Id</span></div>
                                    </div>
                                </div>
                                <div class="info-item">
                                    <i class="fas fa-user"></i>
                                    <div>
                                        <div class="label">Khách hàng</div>
                                        <div class="value">@Model.CustomerName</div>
                                    </div>
                                </div>
                                <div class="info-item">
                                    <i class="fas fa-phone"></i>
                                    <div>
                                        <div class="label">Số điện thoại</div>
                                        <div class="value">@Model.Phone</div>
                                    </div>
                                </div>
                                <div class="info-item">
                                    <i class="fas fa-chair"></i>
                                    <div>
                                        <div class="label">Bàn</div>
                                        <div class="value">@Model.Table?.Name (@Model.Table?.Floor)</div>
                                    </div>
                                </div>
                                <div class="info-item">
                                    <i class="fas fa-calendar-day"></i>
                                    <div>
                                        <div class="label">Ngày đặt</div>
                                        <div class="value">@Model.BookingDate.ToString("dd/MM/yyyy")</div>
                                    </div>
                                </div>
                                <div class="info-item">
                                    <i class="fas fa-clock"></i>
                                    <div>
                                        <div class="label">Giờ đặt</div>
                                        <div class="value">@Model.BookingTime</div>
                                    </div>
                                </div>
                                <div class="info-item">
                                    <i class="fas fa-users"></i>
                                    <div>
                                        <div class="label">Số khách</div>
                                        <div class="value">@Model.Guests người</div>
                                    </div>
                                </div>
                                @if (!string.IsNullOrEmpty(Model.Note))
                                {
                                    <div class="info-item" style="grid-column: span 2;">
                                        <i class="fas fa-sticky-note"></i>
                                        <div>
                                            <div class="label">Ghi chú</div>
                                            <div class="value text-muted">@Model.Note</div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Danh sách món ăn -->
                        @if (Model.OrderItems != null && Model.OrderItems.Any())
                        {
                            <div class="info-section">
                                <h5><i class="fas fa-utensils"></i>Danh sách món ăn đã đặt</h5>
                                <table class="menu-table table table-borderless">
                                    <thead>
                                        <tr>
                                            <th style="width: 60px;">STT</th>
                                            <th>Tên món</th>
                                            <th class="text-end" style="width: 120px;">Đơn giá</th>
                                            <th class="text-center" style="width: 100px;">SL</th>
                                            <th class="text-end" style="width: 150px;">Thành tiền</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            int index = 1;
                                            foreach (var item in Model.OrderItems)
                                            {
                                                <tr>
                                                    <td class="text-center">@index</td>
                                                    <td><strong>@item.MenuItem?.Name</strong></td>
                                                    <td class="text-end">@item.Price.ToString("N0") đ</td>
                                                    <td class="text-center"><span class="badge bg-secondary">@item.Quantity</span>
                                                    </td>
                                                    <td class="text-end"><strong>@((item.Price * item.Quantity).ToString("N0"))
                                                            đ</strong></td>
                                                </tr>
                                                index++;
                                            }
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th colspan="4" class="text-end">Tổng cộng:</th>
                                            <th class="text-end">@totalAmount.ToString("N0") đ</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="alert-empty">
                                <i class="fas fa-info-circle me-2"></i>
                                <strong>Chưa có món ăn nào được đặt.</strong> Bạn có thể gọi thêm món khi đến nhà hàng.
                            </div>
                        }

                        <!-- Bảng tính chi tiết -->
                        <div class="info-section">
                            <h5><i class="fas fa-calculator"></i>Chi tiết thanh toán</h5>
                            <table class="table table-borderless">
                                <tbody>
                                    <tr>
                                        <td><i class="fas fa-hand-holding-usd text-warning me-2"></i><strong>Phí giữ bàn (Cọc bắt buộc)</strong></td>
                                        <td class="text-end"><strong class="text-warning">@depositFee.ToString("N0") đ</strong></td>
                                    </tr>
                                    @if (totalAmount > 0)
                                    {
                                        <tr>
                                            <td><i class="fas fa-utensils text-info me-2"></i>Tổng tiền món ăn đã chọn</td>
                                            <td class="text-end">@totalAmount.ToString("N0") đ</td>
                                        </tr>
                                    }
                                    <tr class="border-top">
                                        <td><i class="fas fa-credit-card text-success me-2"></i><strong>Số tiền cần thanh toán ngay</strong></td>
                                        <td class="text-end"><h5 class="text-success mb-0">@payNow.ToString("N0") đ</h5></td>
                                    </tr>
                                    @if (payLater > 0)
                                    {
                                        <tr>
                                            <td><i class="fas fa-cash-register text-secondary me-2"></i>Số tiền thanh toán tại quầy (khi đến nhà hàng)</td>
                                            <td class="text-end"><span class="text-secondary">@payLater.ToString("N0") đ</span></td>
                                        </tr>
                                    }
                                    <tr class="border-top">
                                        <td><i class="fas fa-receipt text-primary me-2"></i><strong>Tổng hóa đơn dự kiến</strong></td>
                                        <td class="text-end"><h4 class="text-primary mb-0">@((depositFee + totalAmount).ToString("N0")) đ</h4></td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="alert alert-info mb-0">
                                <i class="fas fa-info-circle me-2"></i>
                                <strong>Lưu ý:</strong> Phí cọc 100,000đ sẽ được trừ vào tổng hóa đơn khi quý khách đến dùng bữa.
                            </div>
                        </div>

                        <!-- Phương thức thanh toán -->
                        <div class="info-section">
                            <h5><i class="fas fa-wallet"></i>Chọn phương thức thanh toán</h5>
                            <form method="post" action="@Url.Action("ProcessBookingPayment", "Payment")" id="paymentForm">
                                <input type="hidden" name="bookingId" value="@Model.Id" />

                                <div class="payment-methods">
                                    <div class="payment-option-card">
                                        <input type="radio" name="paymentMethod" id="payRestaurant" value="cod_deposit"
                                            checked>
                                        <label class="payment-card" for="payRestaurant">
                                            <i class="fas fa-hand-holding-usd text-warning"></i>
                                            <h6>Đặt cọc giữ bàn (COD)</h6>
                                            <small>Thanh toán cọc 100k ngay, số còn lại trả tại quầy</small>
                                        </label>
                                    </div>

                                    <!-- Cảnh báo vàng khi chọn COD -->
                                    <div class="alert alert-warning mt-3" id="codWarning" style="display: block;">
                                        <i class="fas fa-exclamation-triangle me-2"></i>
                                        <strong>Lưu ý quan trọng:</strong> Bạn cần thanh toán cọc <strong>100,000đ</strong> ngay bây giờ để hoàn tất việc giữ bàn. 
                                        Số tiền này sẽ được trừ vào hóa đơn khi bạn đến dùng bữa.
                                    </div>

                                    <div class="payment-option-card">
                                        <input type="radio" name="paymentMethod" id="payEWallet" value="ewallet">
                                        <label class="payment-card" for="payEWallet">
                                            <i class="fas fa-mobile-alt text-success"></i>
                                            <h6>Ví điện tử</h6>
                                            <small>MoMo, ZaloPay, VNPay</small>
                                        </label>
                                    </div>

                                    <div class="payment-option-card">
                                        <input type="radio" name="paymentMethod" id="payBank" value="bank_transfer">
                                        <label class="payment-card" for="payBank">
                                            <i class="fas fa-university text-info"></i>
                                            <h6>Chuyển khoản</h6>
                                            <small>Chuyển khoản ngân hàng</small>
                                        </label>
                                    </div>
                                </div>

                                <div class="action-buttons">
                                    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-custom">
                                        <i class="fas fa-arrow-left me-2"></i>Quay về trang chủ
                                    </a>
                                    <button type="submit" class="btn btn-primary-custom" id="submitBtn">
                                        <i class="fas fa-check-circle me-2"></i>Thanh toán cọc 100,000đ
                                    </button>
                                </div>
                            </form>
                        </div>

                        <script>
                        // JavaScript xử lý hiển thị cảnh báo và đổi text button
                        document.addEventListener('DOMContentLoaded', function() {
                            const codRadio = document.getElementById('payRestaurant');
                            const ewalletRadio = document.getElementById('payEWallet');
                            const bankRadio = document.getElementById('payBank');
                            const codWarning = document.getElementById('codWarning');
                            const submitBtn = document.getElementById('submitBtn');
                            const paymentForm = document.getElementById('paymentForm');

                            function updateUI() {
                                const selectedMethod = document.querySelector('input[name="paymentMethod"]:checked').value;
                                
                                if (selectedMethod === 'cod_deposit') {
                                    codWarning.style.display = 'block';
                                    submitBtn.innerHTML = '<i class="fas fa-check-circle me-2"></i>Thanh toán cọc 100,000đ';
                                } else if (selectedMethod === 'ewallet') {
                                    codWarning.style.display = 'none';
                                    submitBtn.innerHTML = '<i class="fas fa-mobile-alt me-2"></i>Thanh toán @((depositFee + totalAmount).ToString("N0"))đ qua Ví điện tử';
                                } else if (selectedMethod === 'bank_transfer') {
                                    codWarning.style.display = 'none';
                                    submitBtn.innerHTML = '<i class="fas fa-university me-2"></i>Thanh toán @((depositFee + totalAmount).ToString("N0"))đ qua Chuyển khoản';
                                }
                            }

                            // Gắn sự kiện change cho các radio button
                            codRadio.addEventListener('change', updateUI);
                            ewalletRadio.addEventListener('change', updateUI);
                            bankRadio.addEventListener('change', updateUI);

                            // Validate form trước khi submit
                            paymentForm.addEventListener('submit', function(e) {
                                const selectedMethod = document.querySelector('input[name="paymentMethod"]:checked').value;
                                
                                // Hiện cảnh báo xác nhận
                                let confirmMsg = '';
                                if (selectedMethod === 'cod_deposit') {
                                    confirmMsg = 'Bạn xác nhận thanh toán cọc 100,000đ để giữ bàn?';
                                } else {
                                    confirmMsg = 'Bạn xác nhận thanh toán @((depositFee + totalAmount).ToString("N0"))đ?';
                                }
                                
                                if (!confirm(confirmMsg)) {
                                    e.preventDefault();
                                    return false;
                                }
                            });

                            // Khởi tạo UI ban đầu
                            updateUI();
                        });
                        </script>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>