@model IEnumerable<QLNHWebApp.Models.MenuItem>
@{
    ViewData["Title"] = "Quản lý Thực đơn";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">
        <i class="fas fa-utensils me-2"></i>
        Quản lý Thực đơn
    </h2>
    <div>
        <form asp-controller="AdminMenu" asp-action="UpdateDetailedDescriptions" method="post" class="d-inline">
            <button type="submit" class="btn btn-success me-2"
                onclick="return confirm('Bạn có chắc muốn cập nhật mô tả chi tiết cho tất cả món ăn?')">
                <i class="fas fa-sync-alt me-1"></i>
                Cập nhật mô tả chi tiết
            </button>
        </form>
        <a asp-controller="AdminMenu" asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>
            Thêm món mới
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Search and Filter -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label for="searchString" class="form-label">Tìm kiếm</label>
                <input type="text" class="form-control" id="searchString" name="searchString"
                    value="@ViewData["CurrentFilter"]" placeholder="Tìm kiếm món ăn">
            </div>
            <div class="col-md-3">
                <label for="category" class="form-label">Danh mục</label>
                <select class="form-select" id="category" name="category">
                    <option value="">Tất cả danh mục</option>
                    <option value="Khai vị" selected="@(ViewData["CategoryFilter"]?.ToString() == "Khai vị")">Khai vị
                    </option>
                    <option value="Món chính" selected="@(ViewData["CategoryFilter"]?.ToString() == "Món chính")">Món
                        chính</option>
                    <option value="Tráng miệng" selected="@(ViewData["CategoryFilter"]?.ToString() == "Tráng miệng")">
                        Tráng miệng</option>
                    <option value="Đồ uống" selected="@(ViewData["CategoryFilter"]?.ToString() == "Đồ uống")">Đồ
                        uống</option>
                    <option value="Món lẩu" selected="@(ViewData["CategoryFilter"]?.ToString() == "Món lẩu")">Món lẩu
                    </option>
                    <option value="Món nướng" selected="@(ViewData["CategoryFilter"]?.ToString() == "Món nướng")">Món
                        nướng</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">&nbsp;</label>
                <div>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search me-1"></i>
                        Tìm kiếm
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Menu Items Grid -->
<div class="row">
    @if (Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 shadow-sm @(!item.IsAvailable ? "menu-item-hidden" : "")" data-menu-id="@item.Id">
                    <div class="position-relative">
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name"
                                style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top d-flex align-items-center justify-content-center bg-light"
                                style="height: 200px;">
                                <div class="text-center text-muted">
                                    <i class="fas fa-image fa-3x mb-2"></i>
                                    <p class="mb-0">Chưa có ảnh</p>
                                </div>
                            </div>
                        }
                        <span class="badge bg-primary position-absolute top-0 start-0 m-2">@item.Category</span>
                        <span class="badge bg-success position-absolute top-0 end-0 m-2">@item.Price.ToString("C0", new
                                                System.Globalization.CultureInfo("vi-VN"))</span>
                @if (!item.IsAvailable)
                        {
                            <div class="position-absolute top-50 start-50 translate-middle">
                                <span class="badge bg-danger fs-5 px-3 py-2">
                                    <i class="fas fa-eye-slash me-1"></i>
                                    ĐANG ẨN
                                </span>
                            </div>
                        }
                    </div>
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">@item.Name</h5>
                            <div class="form-check form-switch ms-2">
                                <input class="form-check-input toggle-availability" type="checkbox" id="toggle-@item.Id"
                                    data-menu-id="@item.Id" @(item.IsAvailable ? "checked" : "")
                                    title="@(item.IsAvailable ? "Click để ẩn món này" : "Click để hiện món này")">
                                <label class="form-check-label small text-muted" for="toggle-@item.Id">
                                    @(item.IsAvailable ? "Đang hiện" : "Đã ẩn")
                                </label>
                            </div>
                        </div>
                        <p class="card-text flex-grow-1">@item.Description</p>
                        <div class="btn-group mt-auto" role="group">
                            <a asp-controller="AdminMenu" asp-action="Details" asp-route-id="@item.Id"
                                class="btn btn-outline-info btn-sm">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-controller="AdminMenu" asp-action="Edit" asp-route-id="@item.Id"
                                class="btn btn-outline-warning btn-sm">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-controller="AdminMenu" asp-action="Delete" asp-route-id="@item.Id"
                                class="btn btn-outline-danger btn-sm"
                                onclick="return confirm('Bạn có chắc chắn muốn xóa món ăn &quot;@item.Name&quot;? Hành động này không thể hoàn tác!')">
                                <i class="fas fa-trash"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="card">
                <div class="card-body text-center py-5">
                    <i class="fas fa-utensils fa-3x text-muted mb-3"></i>
                    <h5>Chưa có món ăn nào</h5>
                    <p class="text-muted">Hãy thêm món ăn đầu tiên cho thực đơn của bạn!</p>
                    <a asp-controller="AdminMenu" asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>
                        Thêm món mới
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<!-- Statistics -->
<div class="mt-4">
    <div class="row">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-75">Tổng món ăn</h6>
                            <h4 class="mb-0">@Model.Count()</h4>
                        </div>
                        <div>
                            <i class="fas fa-utensils fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-75">Danh mục</h6>
                            <h4 class="mb-0">@Model.Select(m => m.Category).Distinct().Count()</h4>
                        </div>
                        <div>
                            <i class="fas fa-list fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-75">Giá trung bình</h6>
                            <h4 class="mb-0">@(Model.Any() ? Model.Average(m => m.Price).ToString("C0", new
                                                                System.Globalization.CultureInfo("vi-VN")) : "0đ")</h4>
                        </div>
                        <div>
                            <i class="fas fa-dollar-sign fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-75">Món đắt nhất</h6>
                            <h4 class="mb-0">@(Model.Any() ? Model.Max(m => m.Price).ToString("C0", new
                                                                System.Globalization.CultureInfo("vi-VN")) : "0đ")</h4>
                        </div>
                        <div>
                            <i class="fas fa-crown fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Style cho món bị ẩn */
    .menu-item-hidden {
        opacity: 0.5;
        border: 2px dashed #dc3545 !important;
    }

    .menu-item-hidden img,
    .menu-item-hidden .card-img-top {
        filter: grayscale(70%);
    }

    /* Animation cho toggle */
    .form-check-input.toggle-availability {
        cursor: pointer;
        width: 3em;
        height: 1.5em;
    }

    .form-check-input.toggle-availability:disabled {
        cursor: not-allowed;
        opacity: 0.5;
    }

    /* Toast animations */
    @@keyframes slideIn {
        from {
            transform: translateX(400px);
            opacity: 0;
        }

        to {
            transform: translateX(0);
            opacity: 1;
        }
    }

    @@keyframes slideOut {
        from {
            transform: translateX(0);
            opacity: 1;
        }

        to {
            transform: translateX(400px);
            opacity: 0;
        }
    }
</style>

<script>
    // Auto-submit search on Enter key
    document.getElementById('searchString').addEventListener('keypress', function (e) {
        if (e.key === 'Enter') {
            e.preventDefault();
            document.querySelector('form').submit();
        }
    });

    // Toggle availability handler
    document.addEventListener('DOMContentLoaded', function () {
        const toggleSwitches = document.querySelectorAll('.toggle-availability');

        toggleSwitches.forEach(toggle => {
            toggle.addEventListener('change', async function () {
                const menuId = this.getAttribute('data-menu-id');
                const isChecked = this.checked;
                const card = document.querySelector(`[data-menu-id="${menuId}"]`);
                const label = this.nextElementSibling;

                // Disable toggle during request
                this.disabled = true;

                try {
                    const response = await fetch(`/AdminMenu/ToggleAvailability/${menuId}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });

                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }

                    const result = await response.json();

                    if (result.success) {
                        // Update UI
                        if (result.isAvailable) {
                            card.classList.remove('menu-item-hidden');
                            label.textContent = 'Đang hiện';
                            this.title = 'Click để ẩn món này';

                            // Remove "ĐANG ẨN" badge if exists
                            const badge = card.querySelector('.translate-middle');
                            if (badge) badge.remove();
                        } else {
                            card.classList.add('menu-item-hidden');
                            label.textContent = 'Đã ẩn';
                            this.title = 'Click để hiện món này';

                            // Add "ĐANG ẨN" badge
                            const imgContainer = card.querySelector('.position-relative');
                            const badge = document.createElement('div');
                            badge.className = 'position-absolute top-50 start-50 translate-middle';
                            badge.innerHTML = '<span class="badge bg-danger fs-5 px-3 py-2"><i class="fas fa-eye-slash me-1"></i>ĐANG ẨN</span>';
                            imgContainer.appendChild(badge);
                        }

                        // Show success toast
                        showToast(result.message, 'success');
                    } else {
                        // Revert toggle on error
                        this.checked = !isChecked;
                        showToast('Có lỗi xảy ra, vui lòng thử lại!', 'error');
                    }
                } catch (error) {
                    console.error('Error toggling availability:', error);
                    this.checked = !isChecked;
                    showToast('Không thể kết nối đến server!', 'error');
                } finally {
                    // Re-enable toggle
                    this.disabled = false;
                }
            });
        });
    });

    // Simple toast notification
    function showToast(message, type = 'success') {
        const bgColor = type === 'success' ? '#28a745' : '#dc3545';
        const icon = type === 'success' ? 'check-circle' : 'exclamation-circle';

        const toast = document.createElement('div');
        toast.style.cssText = `
            position: fixed;
            top: 20px;
            right: 20px;
            background: ${bgColor};
            color: white;
            padding: 15px 20px;
            border-radius: 5px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.2);
            z-index: 9999;
            display: flex;
            align-items: center;
            gap: 10px;
            animation: slideIn 0.3s ease-out;
        `;
        toast.innerHTML = `<i class="fas fa-${icon}"></i> ${message}`;

        document.body.appendChild(toast);

        setTimeout(() => {
            toast.style.animation = 'slideOut 0.3s ease-out';
            setTimeout(() => toast.remove(), 300);
        }, 3000);
    }

</script>