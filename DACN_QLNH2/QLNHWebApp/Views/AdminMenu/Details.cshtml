@model QLNHWebApp.Models.MenuItem
@{
    ViewData["Title"] = "Chi tiết món ăn";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">
        <i class="fas fa-utensils me-2"></i>
        Chi tiết món ăn
    </h2>
    <div>
        <a asp-controller="AdminMenu" asp-action="Index" class="btn btn-outline-secondary me-2">
            <i class="fas fa-arrow-left me-1"></i>
            Quay lại
        </a>
        <a asp-controller="AdminMenu" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
            <i class="fas fa-edit me-1"></i>
            Chỉnh sửa
        </a>
        <a asp-controller="AdminMenu" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger"
            onclick="return confirm('Bạn có chắc chắn muốn xóa món ăn &quot;@Model.Name&quot;? Hành động này không thể hoàn tác!')">
            <i class="fas fa-trash me-1"></i>
            Xóa
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" class="img-fluid rounded shadow" alt="@Model.Name"
                                style="max-height: 400px; width: 100%; object-fit: cover;">
                        }
                        else
                        {
                            <div class="d-flex align-items-center justify-content-center bg-light rounded shadow"
                                style="height: 400px;">
                                <div class="text-center text-muted">
                                    <i class="fas fa-image fa-4x mb-3"></i>
                                    <p class="mb-0">Chưa có ảnh</p>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="col-md-6">
                        <h3 class="card-title text-primary">@Model.Name</h3>
                        <div class="mb-3">
                            <span class="badge bg-primary fs-6">@Model.Category</span>
                        </div>
                        <div class="mb-3">
                            <h4 class="text-success">@Model.Price.ToString("C0", new
                                                                System.Globalization.CultureInfo("vi-VN"))</h4>
                        </div>
                        <div class="mb-3">
                            <h6 class="text-muted">Mô tả:</h6>
                            <p class="card-text">@Model.Description</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>
                    Thông tin chi tiết
                </h5>
            </div>
            <div class="card-body">
                <table class="table table-borderless">
                    <tr>
                        <td><strong>ID:</strong></td>
                        <td>@Model.Id</td>
                    </tr>
                    <tr>
                        <td><strong>Tên món:</strong></td>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <td><strong>Danh mục:</strong></td>
                        <td><span class="badge bg-primary">@Model.Category</span></td>
                    </tr>
                    <tr>
                        <td><strong>Giá:</strong></td>
                        <td class="text-success fw-bold">@Model.Price.ToString("C0", new
                                                        System.Globalization.CultureInfo("vi-VN"))</td>
                    </tr>
                    <tr>
                        <td><strong>Ảnh:</strong></td>
                        <td>
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <span class="text-success">
                                    <i class="fas fa-check-circle me-1"></i>
                                    Có ảnh
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">
                                    <i class="fas fa-times-circle me-1"></i>
                                    Chưa có ảnh
                                </span>
                            }
                        </td>
                    </tr>
                </table>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-tools me-2"></i>
                    Thao tác
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-controller="AdminMenu" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit me-2"></i>
                        Chỉnh sửa món ăn
                    </a>
                    <a asp-controller="AdminMenu" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger"
                        onclick="return confirm('Bạn có chắc chắn muốn xóa món ăn &quot;@Model.Name&quot;? Hành động này không thể hoàn tác!')">
                        <i class="fas fa-trash me-2"></i>
                        Xóa món ăn
                    </a>
                    <a asp-controller="AdminMenu" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-list me-2"></i>
                        Xem tất cả món ăn
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
