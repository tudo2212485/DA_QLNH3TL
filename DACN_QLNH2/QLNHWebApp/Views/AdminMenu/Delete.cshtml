@model QLNHWebApp.Models.MenuItem
@{
    ViewData["Title"] = "Xóa món ăn";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0 text-danger">
        <i class="fas fa-exclamation-triangle me-2"></i>
        Xác nhận xóa món ăn
    </h2>
    <a asp-controller="AdminMenu" asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i>
        Quay lại
    </a>
</div>

<div class="alert alert-danger" role="alert">
    <h4 class="alert-heading">
        <i class="fas fa-exclamation-triangle me-2"></i>
        Cảnh báo!
    </h4>
    <p>Bạn đang chuẩn bị xóa món ăn <strong>"@Model.Name"</strong>. Hành động này không thể hoàn tác!</p>
    <hr>
    <p class="mb-0">Tất cả dữ liệu liên quan đến món ăn này sẽ bị xóa vĩnh viễn.</p>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">
                    <i class="fas fa-trash me-2"></i>
                    Thông tin món ăn sẽ bị xóa
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" class="img-fluid rounded shadow" alt="@Model.Name"
                                style="max-height: 200px; width: 100%; object-fit: cover;">
                        }
                        else
                        {
                            <div class="d-flex align-items-center justify-content-center bg-light rounded shadow"
                                style="height: 200px;">
                                <div class="text-center text-muted">
                                    <i class="fas fa-image fa-2x mb-2"></i>
                                    <p class="mb-0 small">Chưa có ảnh</p>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="col-md-8">
                        <h4 class="text-danger">@Model.Name</h4>
                        <p class="text-muted mb-2">
                            <span class="badge bg-primary">@Model.Category</span>
                            <span class="badge bg-success ms-2">@Model.Price.ToString("C0", new
                                                                System.Globalization.CultureInfo("vi-VN"))</span>
                        </p>
                        <p class="card-text">@Model.Description</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>
                    Thông tin chi tiết
                </h5>
            </div>
            <div class="card-body">
                <table class="table table-borderless">
                    <tr>
                        <td><strong>ID:</strong></td>
                        <td>@Model.Id</td>
                    </tr>
                    <tr>
                        <td><strong>Tên món:</strong></td>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <td><strong>Danh mục:</strong></td>
                        <td><span class="badge bg-primary">@Model.Category</span></td>
                    </tr>
                    <tr>
                        <td><strong>Giá:</strong></td>
                        <td class="text-success fw-bold">@Model.Price.ToString("C0", new
                                                        System.Globalization.CultureInfo("vi-VN"))</td>
                    </tr>
                </table>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Xác nhận xóa
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="DeleteConfirmed" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="alert alert-warning">
                        <strong>Lưu ý:</strong> Hành động này sẽ xóa vĩnh viễn món ăn và tất cả dữ liệu liên quan.
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger btn-lg"
                            onclick="return confirm('Bạn có chắc chắn muốn xóa món ăn \" @Model.Name\"? Hành động này
                            không thể hoàn tác!')">
                            <i class="fas fa-trash me-2"></i>
                            Xác nhận xóa
                        </button>
                        <a asp-controller="AdminMenu" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>
                            Hủy bỏ
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
