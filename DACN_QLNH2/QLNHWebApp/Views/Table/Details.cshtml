@model QLNHWebApp.Models.Table

<div class="row">
    <div class="col-md-6">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name"
                style="max-height: 300px; width: 100%; object-fit: cover;">
        }
        else
        {
            <div class="bg-light rounded d-flex align-items-center justify-content-center" style="height: 300px;">
                <i class="fas fa-table fa-3x text-muted"></i>
            </div>
        }
    </div>
    <div class="col-md-6">
        <h4>@Model.Name</h4>
        <hr>

        <div class="mb-3">
            <strong>Tầng:</strong> @Model.Floor
        </div>

        <div class="mb-3">
            <strong>Sức chứa:</strong>
            <span class="badge bg-primary">@Model.Capacity người</span>
        </div>

        <div class="mb-3">
            <strong>Mô tả:</strong>
            <p class="text-muted">@Model.Description</p>
        </div>

        <div class="mb-3">
            <strong>Trạng thái:</strong>
            @if (Model.IsActive)
            {
                <span class="badge bg-success">Hoạt động</span>
            }
            else
            {
                <span class="badge bg-danger">Không hoạt động</span>
            }
        </div>

        <div class="mb-3">
            <strong>Ngày tạo:</strong>
            <span class="text-muted">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
        </div>
    </div>
</div>

