@{
    ViewData["Title"] = "Chọn Tầng";
    var availableFloors = ViewBag.AvailableFloors as List<string> ?? new List<string>();
    var guests = ViewBag.Guests as int?;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-building me-2"></i>
                        Chọn Tầng Phù Hợp
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Số khách:</strong> @guests người
                    </div>

                    <div class="row">
                        @foreach (var floor in availableFloors)
                        {
                            <div class="col-md-4 mb-3">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body text-center">
                                        <div class="mb-3">
                                            @if (floor == "Tầng 1")
                                            {
                                                <i class="fas fa-building fa-3x text-primary"></i>
                                            }
                                            else if (floor == "Tầng 2")
                                            {
                                                <i class="fas fa-layer-group fa-3x text-success"></i>
                                            }
                                            else
                                            {
                                                <i class="fas fa-sun fa-3x text-warning"></i>
                                            }
                                        </div>
                                        <h5 class="card-title">@floor</h5>
                                        <p class="card-text text-muted">
                                            @if (floor == "Tầng 1")
                                            {
                                                <span>8 bàn - Phù hợp 1-20 khách</span>
                                            }
                                            else if (floor == "Tầng 2")
                                            {
                                                <span>7 bàn - Phù hợp 1-15 khách</span>
                                            }
                                            else
                                            {
                                                <span>4 bàn - Phù hợp 1-10 khách</span>
                                            }
                                        </p>
                                        <a href="@Url.Action("SelectTable", "Table", new { floor = floor, guests = guests })"
                                            class="btn btn-primary">
                                            <i class="fas fa-arrow-right me-1"></i>
                                            Chọn @floor
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="text-center mt-4">
                        <a href="@Url.Action("Table", "Booking")" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i>
                            Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
