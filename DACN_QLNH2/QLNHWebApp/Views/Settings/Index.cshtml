@model QLNHWebApp.Models.RestaurantSettings
@{
    ViewData["Title"] = "Thiết lập Hệ thống";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <!-- Modern Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="settings-page-header">
                <div>
                    <h3 class="page-title-modern">
                        <i class="bx bx-cog me-2"></i>Thiết lập Hệ thống
                    </h3>
                    <p class="page-subtitle-modern">Cấu hình thông tin và các thiết lập chung của nhà hàng</p>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show modern-alert" role="alert">
            <i class="bx bx-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Left Column - Main Settings -->
        <div class="col-lg-8">
            <!-- Restaurant Information Card -->
            <div class="settings-card mb-4">
                <div class="settings-card-header">
                    <div class="settings-card-title">
                        <i class="bx bx-store-alt me-2"></i>
                        Thông tin Nhà hàng
                    </div>
                    <span class="settings-badge">Bắt buộc</span>
                </div>
                <div class="settings-card-body">
                    <form asp-action="UpdateGeneral" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <div class="row g-4">
                            <div class="col-md-12">
                                <label asp-for="RestaurantName" class="modern-label">
                                    <i class="bx bx-rename me-1"></i>Tên nhà hàng
                                </label>
                                <input asp-for="RestaurantName" class="modern-input" placeholder="Nhập tên nhà hàng..."
                                    required />
                                <span asp-validation-for="RestaurantName" class="text-danger"></span>
                            </div>

                            <div class="col-md-12">
                                <label asp-for="Address" class="modern-label">
                                    <i class="bx bx-map me-1"></i>Địa chỉ
                                </label>
                                <input asp-for="Address" class="modern-input" placeholder="Nhập địa chỉ đầy đủ..."
                                    required />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Phone" class="modern-label">
                                    <i class="bx bx-phone me-1"></i>Số điện thoại
                                </label>
                                <input asp-for="Phone" class="modern-input" placeholder="0123-456-789" required />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Email" class="modern-label">
                                    <i class="bx bx-envelope me-1"></i>Email
                                </label>
                                <input asp-for="Email" type="email" class="modern-input"
                                    placeholder="info@restaurant.com" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <hr class="settings-divider">
                            </div>

                            <div class="col-md-6">
                                <label asp-for="OpenTime" class="modern-label">
                                    <i class="bx bx-time me-1"></i>Giờ mở cửa
                                </label>
                                <input asp-for="OpenTime" type="time" class="modern-input" required />
                                <span asp-validation-for="OpenTime" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="CloseTime" class="modern-label">
                                    <i class="bx bx-time-five me-1"></i>Giờ đóng cửa
                                </label>
                                <input asp-for="CloseTime" type="time" class="modern-input" required />
                                <span asp-validation-for="CloseTime" class="text-danger"></span>
                            </div>

                            <div class="col-md-12">
                                <label asp-for="TaxRate" class="modern-label">
                                    <i class="bx bx-receipt me-1"></i>Thuế VAT (%)
                                </label>
                                <div class="input-with-addon">
                                    <input asp-for="TaxRate" type="number" step="0.01" min="0" max="1"
                                        class="modern-input" placeholder="0.10" required />
                                    <span class="input-addon">%</span>
                                </div>
                                <small class="form-text text-muted">
                                    <i class="bx bx-info-circle me-1"></i>
                                    Nhập dạng thập phân (VD: 0.10 = 10%)
                                </small>
                                <span asp-validation-for="TaxRate" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <div class="d-flex gap-2 justify-content-end">
                                    <a href="@Url.Action("Index", "Admin")" class="btn-cancel-modern">
                                        <i class="bx bx-x me-1"></i>Hủy
                                    </a>
                                    <button type="submit" class="btn-save-modern">
                                        <i class="bx bx-save me-1"></i>Lưu thay đổi
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Right Column - Quick Info & Actions -->
        <div class="col-lg-4">
            <!-- Current Settings Card -->
            <div class="settings-info-card mb-4">
                <div class="settings-info-header">
                    <i class="bx bx-info-circle me-2"></i>
                    Thông tin hiện tại
                </div>
                <div class="settings-info-body">
                    <div class="info-row">
                        <div class="info-icon info-icon-primary">
                            <i class="bx bx-store-alt"></i>
                        </div>
                        <div class="info-content">
                            <div class="info-label">Tên nhà hàng</div>
                            <div class="info-value">@Model.RestaurantName</div>
                        </div>
                    </div>

                    <div class="info-row">
                        <div class="info-icon info-icon-success">
                            <i class="bx bx-time"></i>
                        </div>
                        <div class="info-content">
                            <div class="info-label">Giờ hoạt động</div>
                            <div class="info-value">
                                @Model.OpenTime.ToString("HH:mm") - @Model.CloseTime.ToString("HH:mm")
                            </div>
                        </div>
                    </div>

                    <div class="info-row">
                        <div class="info-icon info-icon-warning">
                            <i class="bx bx-receipt"></i>
                        </div>
                        <div class="info-content">
                            <div class="info-label">Thuế VAT</div>
                            <div class="info-value">@((Model.TaxRate * 100).ToString("0.##"))%</div>
                        </div>
                    </div>

                    <div class="info-row">
                        <div class="info-icon info-icon-info">
                            <i class="bx bx-phone"></i>
                        </div>
                        <div class="info-content">
                            <div class="info-label">Liên hệ</div>
                            <div class="info-value">@Model.Phone</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions Card -->
            <div class="settings-info-card">
                <div class="settings-info-header">
                    <i class="bx bx-bolt me-2"></i>
                    Thao tác nhanh
                </div>
                <div class="settings-info-body">
                    <form asp-action="ResetToDefault" method="post"
                        onsubmit="return confirm('Bạn có chắc muốn khôi phục cài đặt mặc định? Hành động này sẽ xóa tất cả tùy chỉnh hiện tại!');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="action-button action-reset">
                            <div class="action-icon">
                                <i class="bx bx-reset"></i>
                            </div>
                            <div class="action-content">
                                <div class="action-title">Khôi phục mặc định</div>
                                <div class="action-description">Reset về cài đặt ban đầu</div>
                            </div>
                            <i class="bx bx-chevron-right action-arrow"></i>
                        </button>
                    </form>

                    <a href="@Url.Action("Index", "Admin")" class="action-button action-back">
                        <div class="action-icon">
                            <i class="bx bx-arrow-back"></i>
                        </div>
                        <div class="action-content">
                            <div class="action-title">Quay lại Dashboard</div>
                            <div class="action-description">Về trang quản lý chính</div>
                        </div>
                        <i class="bx bx-chevron-right action-arrow"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <style>
        /* Modern Page Header */
        .settings-page-header {
            background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
            padding: 2rem;
            border-radius: 20px;
            color: white;
            box-shadow: 0 10px 40px rgba(99, 102, 241, 0.3);
            position: relative;
            overflow: hidden;
        }

        .settings-page-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 400px;
            height: 400px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
        }

        .page-title-modern {
            font-size: 1.75rem;
            font-weight: 700;
            margin: 0;
            position: relative;
            z-index: 1;
        }

        .page-subtitle-modern {
            margin: 0.5rem 0 0 0;
            opacity: 0.95;
            font-size: 0.95rem;
            position: relative;
            z-index: 1;
        }

        /* Modern Alert */
        .modern-alert {
            border-radius: 12px;
            border: none;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            display: flex;
            align-items: center;
        }

        /* Settings Card */
        .settings-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
            border: 1px solid rgba(0, 0, 0, 0.05);
            overflow: hidden;
        }

        .settings-card-header {
            padding: 1.5rem 2rem;
            background: linear-gradient(to bottom, #fafafa, white);
            border-bottom: 2px solid #f1f5f9;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .settings-card-title {
            font-size: 1.125rem;
            font-weight: 600;
            color: #1e293b;
            display: flex;
            align-items: center;
        }

        .settings-badge {
            background: linear-gradient(135deg, #ef4444, #dc2626);
            color: white;
            padding: 0.375rem 0.875rem;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .settings-card-body {
            padding: 2rem;
        }

        /* Modern Form Elements */
        .modern-label {
            font-size: 0.875rem;
            font-weight: 600;
            color: #1e293b;
            margin-bottom: 0.5rem;
            display: block;
        }

        .modern-input {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            font-size: 0.9375rem;
            transition: all 0.2s ease;
            background: #f8fafc;
        }

        .modern-input:focus {
            outline: none;
            border-color: #6366f1;
            background: white;
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
        }

        .input-with-addon {
            position: relative;
            display: flex;
            align-items: center;
        }

        .input-with-addon .modern-input {
            padding-right: 3rem;
        }

        .input-addon {
            position: absolute;
            right: 1rem;
            color: #64748b;
            font-weight: 600;
            pointer-events: none;
        }

        .settings-divider {
            border: none;
            border-top: 1px solid #e2e8f0;
            margin: 0;
        }

        /* Buttons */
        .btn-save-modern,
        .btn-cancel-modern {
            padding: 0.75rem 1.5rem;
            border-radius: 12px;
            font-weight: 600;
            border: none;
            cursor: pointer;
            transition: all 0.2s ease;
            font-size: 0.9375rem;
            text-decoration: none;
            display: inline-block;
        }

        .btn-save-modern {
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
            color: white;
        }

        .btn-save-modern:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(99, 102, 241, 0.3);
            color: white;
        }

        .btn-cancel-modern {
            background: #f1f5f9;
            color: #64748b;
        }

        .btn-cancel-modern:hover {
            background: #e2e8f0;
            color: #64748b;
        }

        /* Info Card */
        .settings-info-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
            border: 1px solid rgba(0, 0, 0, 0.05);
            overflow: hidden;
        }

        .settings-info-header {
            padding: 1.25rem 1.5rem;
            background: linear-gradient(to bottom, #fafafa, white);
            border-bottom: 2px solid #f1f5f9;
            font-weight: 600;
            color: #1e293b;
            display: flex;
            align-items: center;
        }

        .settings-info-body {
            padding: 1.5rem;
        }

        .info-row {
            display: flex;
            align-items: flex-start;
            gap: 1rem;
            padding: 1rem;
            border-radius: 10px;
            transition: all 0.2s ease;
            margin-bottom: 0.75rem;
        }

        .info-row:last-child {
            margin-bottom: 0;
        }

        .info-row:hover {
            background: #f8fafc;
        }

        .info-icon {
            width: 45px;
            height: 45px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
            flex-shrink: 0;
        }

        .info-icon-primary {
            background: linear-gradient(135deg, #6366f115, #8b5cf615);
            color: #6366f1;
        }

        .info-icon-success {
            background: linear-gradient(135deg, #10b98115, #05966915);
            color: #10b981;
        }

        .info-icon-warning {
            background: linear-gradient(135deg, #f59e0b15, #d9770615);
            color: #f59e0b;
        }

        .info-icon-info {
            background: linear-gradient(135deg, #3b82f615, #2563eb15);
            color: #3b82f6;
        }

        .info-content {
            flex-grow: 1;
        }

        .info-label {
            font-size: 0.75rem;
            color: #94a3b8;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-weight: 600;
            margin-bottom: 0.25rem;
        }

        .info-value {
            font-size: 0.9375rem;
            font-weight: 600;
            color: #1e293b;
        }

        /* Action Buttons */
        .action-button {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1rem 1.25rem;
            border-radius: 12px;
            border: 2px solid #f1f5f9;
            background: white;
            cursor: pointer;
            transition: all 0.2s ease;
            text-decoration: none;
            color: inherit;
            margin-bottom: 0.75rem;
            width: 100%;
        }

        .action-button:last-child {
            margin-bottom: 0;
        }

        .action-button:hover {
            border-color: transparent;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
            transform: translateY(-2px);
        }

        .action-reset:hover {
            background: linear-gradient(135deg, #fef3c7, #fed7aa);
        }

        .action-back:hover {
            background: linear-gradient(135deg, #dbeafe, #bfdbfe);
            color: inherit;
        }

        .action-icon {
            width: 45px;
            height: 45px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            flex-shrink: 0;
        }

        .action-reset .action-icon {
            background: linear-gradient(135deg, #f59e0b15, #d9770615);
            color: #f59e0b;
        }

        .action-back .action-icon {
            background: linear-gradient(135deg, #3b82f615, #2563eb15);
            color: #3b82f6;
        }

        .action-content {
            flex-grow: 1;
        }

        .action-title {
            font-weight: 600;
            color: #1e293b;
            margin-bottom: 0.25rem;
            font-size: 0.9375rem;
        }

        .action-description {
            font-size: 0.8125rem;
            color: #94a3b8;
        }

        .action-arrow {
            font-size: 1.5rem;
            color: #cbd5e1;
            transition: all 0.2s ease;
        }

        .action-button:hover .action-arrow {
            color: #64748b;
            transform: translateX(4px);
        }

        /* Responsive */
        @@media (max-width: 992px) {
            .settings-card-body {
                padding: 1.5rem;
            }

            .info-row {
                padding: 0.75rem;
            }
        }

        /* Animation */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .settings-card,
        .settings-info-card {
            animation: fadeInUp 0.5s ease-out;
        }
    </style>
}
